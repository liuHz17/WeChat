/* pages/exam/exam.wxss */
 .floor1{
  position:relative;
  margin:5px auto;
} 
.status{
  display:block;
  background:#399;
  width:110px;
  height:20px;
  border-radius:0 15px 15px 0;
  color:yellow;
  padding:5px;
   font-size:18px; 
   font-weight: bold;
   line-height:20px; 
  text-shadow: 1px 1px 1px #fff; 
}
.line{
  width:180px;
  border:1px solid #399;
  /* float: left;  */
   position:absolute; 
   left:118px; 
   top:15px;

}
.content{
  display:flex;
  flex-wrap: nowrap;
}
.level{
   margin:10px 5px 0px;  
}
.levelTop{
  display:flex;
  flex-wrap: wrap;
  flex-direction: column;
  width:150px;
  height:120px;
  background:yellow;
  border-radius: 10px 10px 0px 0px;
}
.levelTop>text{
  color:white;
  font-weight: bold;
  text-align: center;
  margin: 5px auto;
  /* line-height: 100px; */
}
.circle{
  width:60px;
  height:60px;
  border-radius: 50%;
  background:#fff;
  margin:0 auto;
}
.circle>image{
  width:40px;
  height:40px;
  margin:10px 10px;
 vertical-align: center;
}
.levelBottom{
  width:150px;
  height:30px;
  background: lightblue;
  border-radius: 0px 0px 10px 10px ;
}
.levelBottom>image{
  margin:5px 2px;
  width:25px; 
  height:25px;
}